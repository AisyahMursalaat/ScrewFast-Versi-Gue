---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images (Path tetap sama)
import blueprints from "@images/blueprints-image.avif";
import personWorking from "@images/person-working.avif";
import beforeAfter from "@images/before-after.avif";
import constructionWorkers from "@images/construction-workers.avif";
import aerialView from "@images/aerial-view.avif";
import usingTools from "@images/using-tools.avif";
import progressBuilding from "@images/progress-building.avif";
import underConstruction from "@images/under-construction.avif";
import { SITE } from "@data_files/constants"; // Mengoreksi path file data

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

// ARTIKEL LAYANAN (KONTEN DISESUAIKAN)
const articles: Article[] = [
  {
    isRightSection: true,
    title: "Pendampingan Logistik & Operator",
    subTitle:
      "Memulai proyek konstruksi butuh perencanaan matang. Dengan layanan konsultasi profesional kami, kami memandu Anda melalui setiap tahapan sewa alat. Kami menawarkan saran yang disesuaikan mengenai pemilihan unit, durasi kontrak, dan kepatuhan pada standar keselamatan operator.",
    single: false,
    imgOne: blueprints,
    imgOneAlt: "Blueprints dan digital tablet dengan rencana konstruksi.",
    imgTwo: personWorking,
    imgTwoAlt: "Personil sedang bekerja di kantor",
  },
  {
    isRightSection: false,
    title: "Jaminan Kesiapan Unit 100%",
    subTitle:
      "Setiap unit alat berat kami telah melalui pemeriksaan dan perawatan berkala yang ketat. Kami memastikan Excavator, Dozer, dan Crane Anda siap beroperasi di lokasi proyek begitu tiba. RentHeavyPro menjamin standar kualitas tertinggi pada setiap unit yang kami sewakan.",
    img: beforeAfter,
    imgAlt: "Lokasi konstruksi sebelum dan sesudah",
    btnExists: true,
    btnTitle: "Lihat Armada Kami",
    btnURL: "/products",
  },
  {
    isRightSection: true,
    title: "Manajemen Proyek dan Kontrak",
    subTitle:
      "Manajemen kontrak yang efektif adalah kunci keberhasilan. RentHeavyPro menyediakan layanan perencanaan dan pengawasan kontrak sewa yang memastikan proyek Anda berjalan tepat waktu dan sesuai anggaran. Kami menangani koordinasi logistik dan alokasi unit agar Anda fokus pada pembangunan.",
    single: false,
    imgOne: constructionWorkers,
    imgOneAlt: "Pekerja konstruksi sedang mengorganisir proyek",
    imgTwo: aerialView,
    imgTwoAlt: "Tampilan udara lokasi konstruksi",
  },
  {
    isRightSection: false,
    title: "Layanan Dukungan Mekanik 24/7",
    subTitle:
      "Komitmen kami tidak berakhir saat unit dikirim. RentHeavyPro menawarkan layanan pemeliharaan dan dukungan darurat untuk menjamin unit Anda selalu dalam kondisi prima. Tim responsif kami siap memberikan bantuan dan perbaikan di lokasi jika dibutuhkan.",
    img: usingTools,
    imgAlt:
      "Pekerja dengan rompi oranye memegang alat berat",
  },
  {
    isRightSection: true,
    title: "Sistem Verifikasi Dokumen Digital",
    subTitle:
      "Untuk klien korporat kami, RentHeavyPro menawarkan solusi khusus yang terintegrasi dengan sistem legalitas digital. Kami memastikan proses upload dan verifikasi SIM/SIO berjalan cepat, aman, dan mematuhi semua regulasi industri.",
    single: false,
    imgOne: progressBuilding,
    imgOneAlt: "Struktur bangunan sedang dalam pengerjaan",
    imgTwo: underConstruction,
    imgTwoAlt: "Bangunan sedang dalam konstruksi",
    btnExists: true,
    btnTitle: "Hubungi Sales",
    btnURL: "/contact",
  },
];

// METADATA (SEO)
const pageTitle: string = `Layanan | RentHeavyPro`;
const metaDescription =
  "Menghadirkan keahlian dengan visi Anda, RentHeavyPro menyediakan solusi komprehensif dan layanan dukungan luar biasa dalam penyewaan alat berat dan logistik proyek.";
const ogTitle = "Dukungan & Layanan Profesional RentHeavyPro";
---

<MainLayout
  title={pageTitle}
  customDescription={metaDescription}
  customOgTitle={ogTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://rentheavypro.com/services",
    url: "https://rentheavypro.com/services",
    name: "Dukungan & Layanan Profesional | RentHeavyPro",
    description:
      "Menghadirkan keahlian dengan visi Anda, RentHeavyPro menyediakan solusi komprehensif dan layanan dukungan luar biasa dalam penyewaan alat berat dan logistik proyek.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://rentheavypro.com",
      name: "RentHeavyPro",
      description:
        "RentHeavyPro menawarkan unit alat berat terbaik dan layanan konstruksi profesional untuk memenuhi semua kebutuhan proyek Anda.",
    },
    inLanguage: "id-ID",
  }}
>
  {/* MainSection (CTA UTAMA) */}
  <MainSection
    title="Sinergi Keahlian dan Kebutuhan Proyek Anda"
    subTitle="Kami berbangga dalam menyediakan solusi komprehensif dan layanan luar biasa dalam penyewaan alat berat dan logistik. Tim berpengalaman kami berdedikasi mendukung proyek Anda dari awal hingga selesai."
    btnExists={true}
    btnTitle="Jadwalkan Konsultasi"
    btnURL="/contact"
  />
  {/* Bagian Konten yang Bergantian */}
  {
    articles.map((article) => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  {/* FeaturesStats section showcases essential stats valuable to users */}
  <FeaturesStats
    title="Data Pencapaian Kami"
    subTitle="Komitmen kami terhadap kualitas dan keandalan terbukti di setiap proyek yang kami tangani. Kami berdedikasi untuk memberikan layanan terbaik."
    mainStatTitle="99%"
    mainStatSubTitle="dari klien kami menilai pengalaman sewa mereka dengan RentHeavyPro sebagai luar biasa"
    stats={[
      {
        stat: "99.8%",
        description: "tingkat penyelesaian proyek tepat waktu",
      },
      {
        stat: "500+",
        description: "kontrak sewa unit berhasil",
      },
      {
        stat: "30%",
        description: "pertumbuhan klien korporat setiap tahun",
      },
    ]}
  />
</MainLayout>