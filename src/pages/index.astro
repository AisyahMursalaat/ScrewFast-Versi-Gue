---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import PricingSection from "@components/sections/pricing/PricingSection.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import AnnouncementBanner from "@components/ui/banners/AnnouncementBanner.astro"; // Tetap diimpor
import heroImage from "@images/hero-image.avif";
import faqs from "@data/faqs.json";
import features from "@data/features.json";
import pricing from "@data/pricing.json";
import featureImage from "@images/features-image.avif";
import construction from "@images/construction-image.avif";
import tools from "@images/automated-tools.avif";
import dashboard from "@images/dashboard-image.avif";
import { partnersData } from "@/data_files/constants";

const avatarSrcs: Array<string> = [
  "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1541101767792-f9b2b1c4f127?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&&auto=format&fit=facearea&facepad=3&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];
---

<MainLayout>
  <AnnouncementBanner
    btnId="dismiss-button"
    btnTitle="Lihat Repositori Kami"
    url="https://github.com/AisyahMursalaat/ScrewFast-Versi-Gue"
  />

  <HeroSection
    title=`Sewa Alat Berat & Mobil Proyek <span
        class="text-yellow-500 dark:text-yellow-400">RentHeavyPro</span>`
    subTitle="Unit terawat dan layanan profesional untuk setiap proyek konstruksi Anda. Verifikasi dokumen legalitas wajib."
    primaryBtn="Lihat Armada Unit"
    primaryBtnURL="/products"
    secondaryBtn="Login Staff / User"
    secondaryBtnURL="/login"
    withReview={true}
    avatars={avatarSrcs}
    rating=`<span class="font-bold">4.9</span> / 5`
    starCount={5}
    reviews=`Dipercaya <span class="font-bold">500+</span> Klien`
    src={heroImage}
    alt="Alat berat konstruksi di lapangan"
  />

  <ClientsSection
    title="Dipercaya oleh Kontraktor Ternama"
    subTitle="Rasakan keandalan yang dipilih oleh pemimpin industri."
    partners={partnersData}
  />

  <FeaturesGeneral
    title="Solusi Kebutuhan Proyek"
    subTitle="Di RentHeavyPro, kami sediakan unit ready stock dan layanan teknis terbaik untuk kelancaran proyek. Dari SIM/SIO hingga mobilisasi unit, semua terpantau."
    src={featureImage}
    alt="Dashboard sistem RentHeavyPro"
    features={features}
  />

  <FeaturesNavs
    title=`Fitur Unggulan <span class="text-yellow-500 dark:text-yellow-400">RentHeavyPro</span> untuk kelancaran proyek Anda.`
    tabs={[
      {
        heading: "Unit Terbaik & Terawat",
        content:
          "Unit kami sudah dicek dan siap operasional. Performa maksimal untuk setiap proyek konstruksi Anda.",
        svg: "tools",
        src: tools,
        alt: "Dokumen dan peralatan proyek",
        first: true,
      },
      {
        heading: "Tracking Real-Time (GPS)",
        content:
          "Pantau lokasi dan status unit Anda secara langsung. Manajemen logistik unit menjadi lebih mudah (PB-13).",
        svg: "dashboard",
        src: dashboard,
        alt: "Tampilan dashboard tracking GPS",
        second: true,
      },
      {
        heading: "Verifikasi Legalitas (PB-09)",
        content:
          "Dokumen SIM/SIO dijamin keabsahannya. Proses verifikasi Admin yang cepat untuk mobilisasi unit.",
        svg: "house",
        src: construction,
        alt: "Struktur bangunan besi dengan crane",
      },
    ]}
  />

  <TestimonialsSection
    title="Akselerasi Proyek Anda"
    subTitle="Kami memastikan unit tiba tepat waktu. Kecepatan dan keandalan diutamakan dalam setiap kontrak."
    ;
    testimonials={[
      {
        content:
          "RentHeavyPro sangat membantu efisiensi proyek kami. Unitnya sehat, operatornya handal. Sangat direkomendasikan untuk kontraktor!",
        author: "Budi Santoso",
        role: "Site Manager | PT Bangun Jaya",
        avatarSrc:
          "https://images.unsplash.com/photo-1593104547489-5cfb3839a3b5?q=80&w=320&h=320&q=80",
      },
    ]}
    statistics={[
      {
        count: "200+",
        description: "Unit Alat Berat & Mobil",
      },
      {
        count: "100%",
        description: "Unit Terverifikasi & Layak Operasi",
      },
      {
        count: "24/7",
        description: "Dukungan Teknis & Mekanik",
      },
      {
        count: "Fast",
        description: "Proses Administrasi Digital",
      },
    ]}
  />

  <PricingSection pricing={pricing} />

  <FAQ faqs={faqs} />

  <HeroSectionAlt
    title="Mari Kembangkan Proyek Anda"
    subTitle="RentHeavyPro adalah template modern yang sangat cepat, dibangun dengan Astro dan Tailwind CSS."
    url="/products"
  />
</MainLayout>