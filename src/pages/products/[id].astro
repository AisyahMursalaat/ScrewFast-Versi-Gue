---
import MainLayout from "@/layouts/MainLayout.astro";
import { Image } from "astro:assets";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const productEntries = await getCollection("products", ({ id }) => id.startsWith("en/"));
  return productEntries.map((product) => {
    const idWithoutLang = product.id.replace(/^en\//, "");
    return { params: { id: idWithoutLang }, props: { product } };
  });
}

const { product } = Astro.props;
const pageTitle = `${product.data.title} | RentHeavyPro`;
---

<MainLayout title={pageTitle}>
  <div id="overlay" class="fixed inset-0 bg-neutral-200 dark:bg-neutral-800 hidden"></div>

  <section class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14">
    <div class="flex flex-col md:flex-row gap-8 items-start">
      
      <div class="w-full md:w-1/2">
        <div id="defaultImageContainer" class="rounded-xl overflow-hidden shadow-lg bg-gray-100 dark:bg-neutral-800">
           <Image src={product.data.main.imgMain} class="w-full h-auto object-cover" alt={product.data.main.imgAlt} loading="eager" />
        </div>
        <div id="customImageContainer" class="hidden rounded-xl overflow-hidden shadow-lg bg-gray-100 dark:bg-neutral-800 h-[400px] flex items-center justify-center text-[150px]"></div>
      </div>

      <div class="w-full md:w-1/2 space-y-6">
        <div>
          <h1 id="prodTitle" class="text-4xl md:text-5xl font-bold text-gray-800 dark:text-white">{product.data.title}</h1>
          <p id="prodDesc" class="mt-4 text-lg text-gray-600 dark:text-gray-400">{product.data.main.content}</p>
        </div>

        <div class="p-6 bg-orange-50 border border-orange-200 rounded-2xl dark:bg-neutral-800 dark:border-neutral-700 shadow-sm">
           <p class="text-sm font-medium text-gray-500 dark:text-gray-400 mb-1">Harga Sewa (Lepas Kunci)</p>
           <div class="flex items-baseline gap-2">
             <span id="dynamicPrice" class="text-3xl font-extrabold text-orange-600">Loading...</span>
             <span class="text-gray-500">/ hari</span>
           </div>
           <div class="mt-2 flex items-center gap-2">
              <span class="w-2 h-2 rounded-full bg-green-500"></span>
              <span id="dynamicStock" class="font-bold text-gray-700 dark:text-gray-300">Cek Stok...</span>
           </div>
           <div class="mt-4 pt-4 border-t border-orange-200 text-xs text-orange-800 space-y-1">
              <p>ðŸ’¡ <b>Paket Hemat:</b></p>
              <p>â€¢ Bulanan: Disc 10%</p>
              <p>â€¢ Tahunan: Disc 30% (Corporate)</p>
           </div>
        </div>

        <button id="openCheckoutBtn" class="w-full bg-gray-900 hover:bg-gray-800 text-white text-lg font-bold py-4 px-8 rounded-xl shadow-lg transition transform active:scale-95 flex justify-center items-center gap-2">
            <span>ðŸšœ</span> Sewa Sekarang
        </button>
      </div>
    </div>
  </section>

  <div id="checkoutModal" class="fixed inset-0 z-[999] hidden bg-black/60 backdrop-blur-sm flex items-center justify-center p-4 overflow-y-auto">
    <div class="bg-white dark:bg-neutral-900 w-full max-w-lg rounded-2xl shadow-2xl flex flex-col max-h-[90vh]">
      
      <div class="p-5 border-b border-gray-200 dark:border-neutral-700 flex justify-between items-center bg-orange-600 rounded-t-2xl">
        <h3 class="font-bold text-xl text-white">Formulir Sewa</h3>
        <button id="closeModalBtn" class="text-white hover:text-gray-200 text-2xl font-bold">&times;</button>
      </div>

      <div class="p-6 overflow-y-auto space-y-5">
        
        <div class="flex items-center gap-4 p-3 bg-gray-50 rounded-lg border border-gray-200">
           <div id="mIcon" class="text-3xl">ðŸšœ</div>
           <div>
              <h4 id="mName" class="font-bold text-gray-800">Nama Alat</h4>
              <p id="mPrice" class="text-sm text-orange-600 font-bold">Rp 0</p>
              <input type="hidden" id="mPriceRaw">
              <input type="hidden" id="mProductId">
           </div>
        </div>

        <form id="rentalForm" class="space-y-4">
          <input type="text" id="inpName" class="w-full border p-2.5 rounded-lg" placeholder="Nama Lengkap" required>
          <textarea id="inpProjectLoc" rows="2" class="w-full border p-2.5 rounded-lg" placeholder="Lokasi Proyek" required></textarea>
          
          <div class="grid grid-cols-2 gap-4">
             <div>
               <label class="text-xs text-gray-500">Mulai Sewa</label>
               <input type="date" id="inpDate" class="w-full border p-2.5 rounded-lg" required>
             </div>
             <div>
               <label class="text-xs text-gray-500">Durasi & Satuan</label>
               <div class="flex">
                   <input id="inpDur" type="number" value="1" min="1" class="w-1/2 border p-2 rounded-l text-center" required>
                   <select id="inpType" class="w-1/2 border p-2 rounded-r bg-gray-50 font-bold text-sm">
                      <option value="Hari">Harian</option>
                      <option value="Jam">Jam (Min 50)</option>
                      <option value="Bulan">Bulan (Disc 10%)</option>
                      <option value="Tahun">Tahun (Disc 30%)</option>
                   </select>
               </div>
             </div>
          </div>
          
          <div id="discountBadge" class="hidden bg-green-50 text-green-700 text-xs font-bold p-2 rounded text-center border border-green-200">Hemat: Rp 0</div>

          <div>
               <label class="block text-sm font-medium mb-1">Upload SIM/SIO</label>
               <input id="inpFile" type="file" accept="image/*,.pdf" class="w-full border p-2 rounded text-sm" required>
          </div>
          
          <div id="paymentUI" class="hidden border-t pt-4 mt-4 bg-blue-50 p-3 rounded text-center">
              <p class="text-sm text-gray-500">Payment Gateway Simulation...</p>
              <p class="text-2xl font-mono font-bold text-gray-800">8800 1234 5678</p>
          </div>

          <div class="bg-blue-50 p-3 rounded text-right font-bold text-blue-700">
             Total: <span id="totalDisplay">Rp 0</span>
          </div>
          <button type="submit" id="btnToStep2" class="w-full bg-blue-600 text-white font-bold py-3 rounded-lg hover:bg-blue-700 transition">Bayar & Sewa</button>
        </form>
      </div>
    </div>
  </div>
</MainLayout>

<script>
  const API_URL = 'http://localhost:5000/api';

  document.addEventListener("DOMContentLoaded", async function () {
    
    // 1. FETCH DATA DARI DB XAMPP BERDASARKAN URL ID
    const url = window.location.pathname;
    const products = await fetch(`${API_URL}/products`).then(res => res.json());
    
    // Mapping logic (URL ID -> Database ID)
    // Asumsi: URL item-t845 adalah ID 1, dst.
    let dbID = 0;
    if(url.includes('item-t845')) dbID = 1;
    else if(url.includes('item-a765')) dbID = 2;
    else if(url.includes('item-b203')) dbID = 3;
    else if(url.includes('item-f303')) dbID = 4;
    
    // Kalau produk baru (dari fitur tambah admin), biasanya ID-nya > 4
    // Untuk demo ini kita ambil produk pertama jika tidak match
    const matchedProduct = products.find(p => p.id === dbID) || products[0];

    // Update UI
    const priceEl = document.getElementById('dynamicPrice');
    const stockEl = document.getElementById('dynamicStock');
    const btnSewa = document.getElementById('openCheckoutBtn');
    const mPriceRaw = document.getElementById('mPriceRaw');
    const mProductId = document.getElementById('mProductId');
    
    if (matchedProduct) {
       document.getElementById('prodTitle').innerText = matchedProduct.name;
       document.getElementById('mName').innerText = matchedProduct.name;
       priceEl.innerText = `Rp ${parseInt(matchedProduct.price).toLocaleString('id-ID')}`;
       document.getElementById('mPrice').innerText = `Rp ${parseInt(matchedProduct.price).toLocaleString('id-ID')} / hari`;
       
       mPriceRaw.value = matchedProduct.price;
       mProductId.value = matchedProduct.id;
       
       stockEl.innerText = `Stok: ${matchedProduct.stock} Unit`;

       if(matchedProduct.image && matchedProduct.image.length < 5) {
           document.getElementById('customImageContainer').innerHTML = matchedProduct.image;
           document.getElementById('customImageContainer').classList.remove('hidden');
           document.getElementById('defaultImageContainer').classList.add('hidden');
           document.getElementById('mIcon').innerText = matchedProduct.image;
       }
    }

    // 2. LOGIKA HITUNG HARGA (SAMA DENGAN INDEX)
    const modal = document.getElementById('checkoutModal');
    const inpDur = document.getElementById('inpDur');
    const inpType = document.getElementById('inpType');
    const totalDisplay = document.getElementById('totalDisplay');
    const discountBadge = document.getElementById('discountBadge');

    btnSewa.addEventListener('click', () => { modal.classList.remove('hidden'); calculateTotal(); });
    document.getElementById('closeModalBtn').addEventListener('click', () => modal.classList.add('hidden'));

    function calculateTotal() {
       const dailyPrice = parseInt(mPriceRaw.value);
       let duration = parseInt(inpDur.value);
       const type = inpType.value;
       let total = 0;
       let normalTotal = 0;

       if (type === 'Jam') {
          const hourlyPrice = dailyPrice / 8;
          total = hourlyPrice * duration;
          discountBadge.classList.add('hidden');
       } else if (type === 'Hari') {
          total = dailyPrice * duration;
          discountBadge.classList.add('hidden');
       } else if (type === 'Bulan') {
          normalTotal = dailyPrice * 30 * duration;
          total = normalTotal * 0.9;
          discountBadge.innerText = `Hemat: Rp ${(normalTotal - total).toLocaleString()}`;
          discountBadge.classList.remove('hidden');
       } else if (type === 'Tahun') {
          normalTotal = dailyPrice * 365 * duration;
          total = normalTotal * 0.7;
          discountBadge.innerText = `Hemat: Rp ${(normalTotal - total).toLocaleString()}`;
          discountBadge.classList.remove('hidden');
       }
       totalDisplay.innerText = `Rp ${parseInt(total).toLocaleString()}`;
    }

    inpDur.addEventListener('input', calculateTotal);
    inpType.addEventListener('change', () => {
       if (inpType.value === 'Jam') { inpDur.value = 50; alert("Min. Sewa 50 Jam"); }
       else { inpDur.value = 1; }
       calculateTotal();
    });
    
    inpDur.addEventListener('change', () => {
       if (inpType.value === 'Jam' && parseInt(inpDur.value) < 50) {
          inpDur.value = 50;
          calculateTotal();
       }
    });

    // 3. SUBMIT FORM
    const form = document.getElementById('rentalForm');
    const btnSubmit = document.getElementById('btnToStep2');
    const paymentUI = document.getElementById('paymentUI');

    form.addEventListener('submit', async (e) => {
       e.preventDefault();
       if(paymentUI.classList.contains('hidden')) {
           paymentUI.classList.remove('hidden');
           btnSubmit.innerText = "Konfirmasi Pembayaran";
           return;
       }
       btnSubmit.innerText = "Memproses...";
       btnSubmit.disabled = true;

       const formData = new FormData();
       formData.append('customer_name', document.getElementById('inpName').value);
       formData.append('project_loc', document.getElementById('inpProjectLoc').value);
       formData.append('product_id', mProductId.value);
       formData.append('start_date', document.getElementById('inpDate').value);
       formData.append('duration', `${inpDur.value} ${inpType.value}`);
       formData.append('total_rental_fee', totalDisplay.innerText.replace(/[Rp,.]/g, '').trim());
       const fileInput = document.getElementById('inpFile');
       if(fileInput.files[0]) formData.append('sim_document', fileInput.files[0]);

       try {
          const res = await fetch(`${API_URL}/checkout`, { method: 'POST', body: formData });
          const result = await res.json();
          if(result.success) {
              alert(`âœ… Pesanan Berhasil!\nStatus: Menunggu Verifikasi Admin`);
              modal.classList.add('hidden');
          } else {
              alert('Gagal: ' + result.message);
              btnSubmit.disabled = false;
          }
       } catch (error) {
          alert('Server Error');
          btnSubmit.disabled = false;
       }
    });
  });
</script>